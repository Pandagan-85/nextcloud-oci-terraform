# Oracle Cloud Infrastructure Configuration
# Copy this file to .env and fill with your actual values
# NEVER commit .env to git!

# Instance connection
OCI_INSTANCE_IP=YOUR_PUBLIC_IP_HERE
OCI_SSH_USER=ubuntu                    # Default for Ubuntu on OCI
OCI_SSH_KEY_PATH=~/.ssh/YOUR_KEY_NAME  # Path to your private key

# Instance details
OCI_REGION=eu-frankfurt-1              # Your OCI region
OCI_SHAPE=VM.Standard.A1.Flex          # Instance shape

# DuckDNS Configuration
DUCKDNS_DOMAIN=                        # Your subdomain (e.g., nextcloud-oci)
DUCKDNS_TOKEN=                         # Your DuckDNS token (same for all domains)
DUCKDNS_FULL_DOMAIN=                   # Auto: ${DUCKDNS_DOMAIN}.duckdns.org

# SSL Configuration
LETSENCRYPT_EMAIL=                     # Your email for Let's Encrypt certificates

# Nextcloud AIO Configuration
NEXTCLOUD_DOMAIN=                      # Will be set to ${DUCKDNS_DOMAIN}.duckdns.org
NEXTCLOUD_ADMIN_USER=pandagan_queen
NEXTCLOUD_ADMIN_PASSWORD=              # Generate strong password (min 8 chars)
NEXTCLOUD_DATA_DIR=/opt/nextcloud/data
APACHE_PORT=11000                      # Nextcloud AIO Apache port
TALK_PORT=3478                         # Nextcloud Talk port

# Backup configuration
BACKUP_RETENTION_DAYS=7
BACKUP_REMOTE_RETENTION_DAYS=30
